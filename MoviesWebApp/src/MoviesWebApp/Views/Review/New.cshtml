@model MoviesWebApp.ViewModels.NewReviewModel

<div class="page-header">
    <h1>
        Create Review
        <small>
            @Model.MovieTitle
        </small>
    </h1>
</div>

<div class="row">
    <form asp-action="New" method="post">
        <div asp-validation-summary="All"></div>

        <input type="hidden" asp-for="MovieId" />

        <div class="form-group">
            <label asp-for="Stars"></label>
            <input asp-for="Stars" class="form-control" autofocus min="1" max="5" />
        </div>
        <div class="form-group">
            <label asp-for="Comment"></label>
            <textarea asp-for="Comment" class="form-control"></textarea>
        </div>
        
        <div>
            <button class="btn btn-primary">Create Review</button>
        </div>
    </form>
</div>
