@{
    ViewData["Title"] = "Home Page";
}

<h1>Movies App</h1>
<p>Boring sample app to show security by viewing, searching, and reviewing movies. Enjoy!</p>

@if (User.Identity.IsAuthenticated)
{
    <h1>Claims</h1>
    <dl>
        @foreach (var claim in User.Claims)
        {
            <dt>@claim.Type</dt>
            <dd>@claim.Value</dd>
        }
    </dl>
}