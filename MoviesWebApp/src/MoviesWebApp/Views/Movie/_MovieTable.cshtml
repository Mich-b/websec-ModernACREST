@model IEnumerable<MoviesLibrary.Movie>

<table class="table table-bordered table-condensed table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Country</th>
            <th>Director</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
            {
            <tr>
                <td>
                    <a href="~/Movie/Details/@movie.Id">
                        @movie.Title
                    </a>
                </td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
                <td>@movie.CountryName</td>
                <td>@movie.DirectorName</td>
                <td>
                    @if (movie.PosterName != null)
                    {
                        <img width="50" src="~/Posters/@movie.PosterName" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
