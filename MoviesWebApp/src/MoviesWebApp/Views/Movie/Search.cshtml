@model MoviesLibrary.MovieSearchResult

@{
    ViewData["Title"] = "Movie Search";
}

<div class="page-header">
    <h1>
        Search
        @if (Model.Movies != null)
        {
            <small>
                <span class="badge">@Model.Count found</span>
            </small>
        }
    </h1>
</div>

<div class="row search-form">
    <form asp-action="Search" method="get">
        <div class="form-group">
            <label asp-for="SearchTerm">Title</label>
            <input asp-for="SearchTerm" class="form-control" autofocus />
        </div>
        <div><button class="btn btn-primary">Search</button></div>
    </form>
</div>


@if (Model.Movies != null && Model.Count > 0)
{
    <div class="row">
        @Html.Partial("_MovieTable", Model.Movies)
    </div>
}
